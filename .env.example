# FleetFlow System Environment Configuration
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=django-insecure-fleetflow-dev-key-change-in-production-please-use-strong-secret
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (MySQL)
DB_NAME=fleetflow
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_HOST=localhost
DB_PORT=3306

# Security Settings
# Set to False in production
DEBUG=True

# CORS Settings (for API)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=noreply@fleetflow.com

# File Upload Settings
MEDIA_ROOT=/path/to/your/media/files
STATIC_ROOT=/path/to/your/static/files

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7   # days

# Logging Level
LOG_LEVEL=INFO

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=True

# Session Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
CSRF_COOKIE_SECURE=False     # Set to True in production with HTTPS

# Additional Settings
TIME_ZONE=UTC
LANGUAGE_CODE=en-us
